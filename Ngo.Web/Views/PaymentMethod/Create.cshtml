@model PaymentMethodModel

@{
    ViewData["Title"] = "Create";
}


<div class="alert alert-success" role="alert">
    <h1>Create New Payment Method</h1>
</div>
<hr />
<div>
    <form class="card-body" style="padding:10px;" asp-action="Create">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="PaymentMethodName" class="control-label"></label>
                <input asp-for="PaymentMethodName" class="form-control" />
                <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
